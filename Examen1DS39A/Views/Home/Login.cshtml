@model Examen1DS39A.Models.Usuario

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>

        <div class="row mt-5">
            <div class="col-sm-12 col-md-12 col-xl-12 d-flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        @if (Session["msj"] != null)
                        {
                            var myHtmlString = new HtmlString(Session["msj"].ToString());
                            @myHtmlString;
                        }
                        <h5 class="card-title">Login</h5>
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="form-group">

                                @Html.LabelFor(u => u.nombre_usuario)
                                @Html.TextBoxFor(u => u.nombre_usuario, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(u => u.contra)
                                @Html.PasswordFor(u => u.contra, htmlAttributes: new { @class = "form-control" })
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                        }
                    </div>
                </div>


            </div>
        </div>

</body>
</html>
